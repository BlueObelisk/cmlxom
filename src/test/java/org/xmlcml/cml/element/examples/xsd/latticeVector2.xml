<?xml version="1.0" standalone="yes"?>
<lattice
   xmlns="http://www.xml-cml.org/schema"
   xsi:schemaLocation="http://www.xml-cml.org/schema ../../schema.xsd" 
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
>
  <!-- three latticeVectors representing a surface; the third is "Z" and non-periodic  -->
  <latticeVector id="lv1" units="units:bohr" periodic="true">10.0 0.0 0.0</latticeVector>
  <latticeVector id="lv2" units="units:bohr" periodic="true">0.0 10.0 6.0</latticeVector>
  <latticeVector id="lv3" units="units:bohr" periodic="false">0.0 0.0 11.0</latticeVector>
</lattice>

