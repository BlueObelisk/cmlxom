<?xml version="1.0" encoding="UTF-8"?>
<molecule id="polystyreneRandom" 
    title = "polystyrene of random length" 
    convention="cml:PML-basic"
	xmlns:g="http://www.xml-cml.org/mols/geom1"
	xmlns="http://www.xml-cml.org/schema">
		<!--  polystyrene -->
		<fragment>
			<molecule ref="g:dummy"/>
			<fragmentList countExpression="*(3)">
				<join order="1" moleculeRefs2="PARENT NEXT"
					atomRefs2="r1 r1">
					<torsion>180</torsion>
				</join>
				<fragment>
					<molecule ref="g:ch"/>				
					<fragmentList>
						<join order="1" moleculeRefs2="PARENT NEXT"
							atomRefs2="r3 r1">
	 				<torsion>90</torsion>
						</join>
						<fragment>
							<molecule ref="g:benzene"/>				
						</fragment>
					</fragmentList>
	  		    </fragment>
				<join atomRefs2="r2 r2" moleculeRefs2="PREVIOUS NEXT">
					<torsion>60</torsion>
				</join>
				<fragment>
					<molecule ref="g:ch2"/>
					<fragmentList countExpression="*(3)">
						<join order="1" moleculeRefs2="PARENT NEXT"
							atomRefs2="r1 r1">
							<torsion>180</torsion>
						</join>
						<fragment>
							<molecule ref="g:po"/>				
			  		    </fragment>
						<join order="1" moleculeRefs2="PREVIOUS NEXT"
							atomRefs2="r2 r1">
							<torsion>180</torsion>
						</join>
						<fragment>
							<molecule ref="g:po"/>				
			  		    </fragment>
					</fragmentList>
				</fragment>
		    </fragmentList>
		</fragment>
	</molecule>
